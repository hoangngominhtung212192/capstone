<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetDirectionActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/address_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <EditText
                    android:id="@+id/txt_your_location"
                    android:singleLine="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9" />

                <ImageButton
                    android:id="@+id/btn_get_current_location"
                    android:layout_marginBottom="5dp"
                    android:background="@color/button_selectorcolor"
                    android:tint="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_my_location" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:scrollHorizontally="true"
                        android:id="@+id/txt_destination"
                        android:singleLine="true"
                        android:text="1358/28/14 Quang Trung, Phuong 14, Quan Go Vap, TpHCM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9" />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btn_get_direction"
                    android:layout_marginBottom="5dp"
                    android:background="@color/button_selectorcolor"
                    android:tint="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_directions" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <fragment
        android:layout_below="@+id/address_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map_fragment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />



</RelativeLayout>