<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/manageorder_user_wrap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/item_manageorder_avatar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/man"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/item_manageorder_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_manageorder_avatar"
                android:gravity="center"
                android:text="Username"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Request On:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_manageorder_requestDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2018-11-25 21:04:26" />

            <TextView
                android:visibility="gone"
                android:id="@+id/item_manageorder_stateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="	Accepted On:"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/item_manageorder_stateDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2018-11-25 21:04:26" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="	Quantity:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_manageorder_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_manageorder_accept"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_green_dark"
                android:text="Accept"
                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_manageorder_decline"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_red_light"
                android:text="Decline"
                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_manageorder_done"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_blue_dark"
                android:text="Done"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_manageorder_cancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_red_dark"
                android:text="Decline"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_manageorder_rating"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_orange_light"
                android:text="Rating"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_manageorder_rated"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/darker_gray"
                android:text="Rated"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_manageorder_reason"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_red_light"
                android:text="Reason"
                android:textColor="@color/white"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>