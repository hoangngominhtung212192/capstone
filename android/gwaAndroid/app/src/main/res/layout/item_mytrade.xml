<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_mytrade_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/loading_icon"/>

        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/item_mytrade_title"
            android:textSize="15sp"
            android:text="FIGUARTS ZERO ONE PIECE - RORONOA ZORO -YAKKOUDORI"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_mytrade_image"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true"/>

        <TextView
            android:textColor="@android:color/holo_red_light"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/item_mytrade_tradeType"
            android:text="SELL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/item_mytrade_request"
            android:text="Requesting : 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mytrade_title"
            android:layout_alignLeft="@id/item_mytrade_title"/>

        <TextView
            android:textColor="@android:color/holo_blue_light"
            android:id="@+id/item_mytrade_payment"
            android:text="On Payment: 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mytrade_request"
            android:layout_alignLeft="@id/item_mytrade_title"/>
        <TextView
            android:textColor="@android:color/holo_green_light"
            android:id="@+id/item_mytrade_succeed"
            android:text="Succeed: 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mytrade_payment"
            android:layout_alignLeft="@id/item_mytrade_title"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>