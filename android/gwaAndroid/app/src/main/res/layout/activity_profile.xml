<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tks.com.gwaandroid.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="#09c6df"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profile_avatar"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:background="@drawable/man"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profile_fullname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minh Tung"
                            android:textColor="#fff"
                            android:textSize="21sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="#fff"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_username" />

                    <TextView
                        android:textColor="#444444"
                        android:id="@+id/profile_username"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tung"
                        android:paddingLeft="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/birthday"/>

                    <TextView
                        android:id="@+id/profile_birthday"
                        android:textColor="#444444"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02/12/1997"
                        android:paddingLeft="20dp"/>

                    <!--<Button-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:alpha="0.5"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:background="@drawable/ic_create_blue_24dp"/>-->
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/email"/>

                    <TextView
                        android:id="@+id/profile_email"
                        android:textColor="#444444"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tunghnmse62231@fpt.edu.vn"
                        android:paddingLeft="20dp"/>

                    <!--<Button-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:alpha="0.5"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:background="@drawable/ic_create_blue_24dp"/>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/buy"/>

                    <TextView
                        android:id="@+id/profile_numberOfBuy"
                        android:textColor="#444444"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:paddingLeft="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/sell"/>

                    <TextView
                        android:id="@+id/profile_numberOfSell"
                        android:textColor="#444444"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:paddingLeft="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/rating"/>

                    <ImageView
                        android:id="@+id/profile_star_one"
                        android:layout_width="20dp"
                        android:visibility="gone"
                        android:layout_height="20dp"
                        android:src="@drawable/star_rating"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/profile_star_two"
                        android:layout_width="20dp"
                        android:visibility="gone"
                        android:layout_height="20dp"
                        android:src="@drawable/star_rating"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/profile_star_three"
                        android:layout_width="20dp"
                        android:visibility="gone"
                        android:layout_height="20dp"
                        android:src="@drawable/star_rating"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/profile_star_four"
                        android:layout_width="20dp"
                        android:visibility="gone"
                        android:layout_height="20dp"
                        android:src="@drawable/star_rating"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/profile_star_five"
                        android:layout_width="20dp"
                        android:visibility="gone"
                        android:layout_height="20dp"
                        android:src="@drawable/star_rating"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/profile_rating"
                        android:textColor="#444444"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:paddingLeft="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/role"/>

                    <TextView
                        android:id="@+id/profile_role"
                        android:textColor="#006600"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member"
                        android:paddingLeft="20dp"/>
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/viewExchangeEvaluationBtn"
                android:background="@drawable/buttonstylegradient"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textColor="#fff"
                android:drawablePadding="3px"
                android:text="Exchange evaluation"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
