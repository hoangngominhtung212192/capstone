<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/userAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/loading_icon"/>

        <TextView
            android:id="@+id/userName"
            android:text="Name"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/userAvatar"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="3dp"/>

        <ImageView
            android:id="@+id/user_star_one"
            android:visibility="visible"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/userName"
            android:layout_toRightOf="@+id/rImageView"
            android:layout_alignLeft="@+id/userName"
            android:background="@drawable/star_rating"/>
        <ImageView
            android:id="@+id/user_star_two"
            android:visibility="visible"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/userName"
            android:layout_toRightOf="@+id/user_star_one"
            android:layout_alignLeft="@+id/user_star_one"
            android:layout_marginLeft="20dp"
            android:background="@drawable/star_rating"/>
        <ImageView
            android:id="@+id/user_star_three"
            android:visibility="visible"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/userName"
            android:layout_toRightOf="@+id/user_star_two"
            android:layout_alignLeft="@+id/user_star_two"
            android:layout_marginLeft="20dp"
            android:background="@drawable/star_rating"/>
        <ImageView
            android:id="@+id/user_star_four"
            android:visibility="visible"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/userName"
            android:layout_toRightOf="@+id/user_star_three"
            android:layout_alignLeft="@+id/user_star_three"
            android:layout_marginLeft="20dp"
            android:background="@drawable/star_rating"/>
        <ImageView
            android:id="@+id/user_star_five"
            android:visibility="visible"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/userName"
            android:layout_toRightOf="@+id/user_star_four"
            android:layout_alignLeft="@+id/user_star_four"
            android:layout_marginLeft="20dp"
            android:background="@drawable/star_rating"/>

        <TextView
            android:id="@+id/datetime"
            android:text="(2018-12-03 00:31:35)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/comment"
            android:text="This is a test comment which is going to be written in long to test the break new lines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_star_one"
            android:layout_alignLeft="@id/user_star_one"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>